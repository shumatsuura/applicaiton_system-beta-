<div class="container-fluid">
  <div>
    <%= search_form_for(@q, url: admin_users_path) do |f| %>
      <div class="form-inline form-group col-auto">
        <%= f.label :name_or_email_or_office_or_team_or_department_cont, "Key Word", class: "col-sm-1 col-form-label" %>
          <%= f.search_field :name_or_email_or_office_or_team_or_department_cont,
          {class: "form-control", placeholder: "Search"} %>
          <%= f.submit "Search", class: "btn btn-success ml-2 my-sm-0" %>
      </div>
    <% end %>
  </div>

<h3>ユーザー一覧</h3>
<%= paginate @users %>
  <table class='table table-bordered'>
    <thead class="thead-dark"'>
      <tr>
        <th><%= sort_link(@q, :id,"No.",{}, class:"text-light")%></th>
        <th>名前</th>
        <th>EMAIL</th>
        <th>部門</th>
        <th>チーム</th>
        <th>オフィス</th>
        <th>スラックID</th>
        <th>アドミン権限</th>
        <th colspan="3">操作</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.department %></td>
          <td><%= user.team %></td>
          <td><%= user.office %></td>
          <td><%= user.slack_member_id %></td>
          <td><%= user.admin %></td>
          <td><%= link_to 'Show', admin_user_path(user.id) %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user.id) %></td>
          <td><%= link_to 'Destroy', admin_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
